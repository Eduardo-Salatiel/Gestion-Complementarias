extends layout

block contenido
    .container
        .registrar-container
            h1.form-title Registrar usuario

            if locals.mensajes
                each categoria in Object.keys(locals.mensajes)
                    .errores
                        each error in mensajes[categoria]
                            p(class= categoria)= error


            form(action="/crear-usuario" method="POST")
                .campos
                    .campo
                        label(for="nombre") Nombre: 
                        input(type="text" name="nombre" id="nombre" placeholder="Ingresar Nombre" autocomplete="off")
                    .campo
                        label(for="apellidoP") Apellido paterno: 
                        input(type="text" name="aPaterno" id="apellidoP" placeholder="Ingresar Apellido Paterno" autocomplete="off")
                    .campo
                        label(for="apellidoM") Apellido materno: 
                        input(type="text" name="aMaterno" id="apellidoM" placeholder="Ingresar Apellido Materno" autocomplete="off")
                .campos
                    .campo
                        label(for="correo") Correo: 
                        input(type="text" name="correo" id="correo" placeholder="Correo Electronico" autocomplete="off")
                    .campo
                        label(for="role") Role: 
                        select(name="role")
                            option(value="" disabled selected) Selecciona un role
                            option(value="admin") Administrador
                            option(value="user") Usuario
                    .campo
                        label(for="jefe") Jefe de carrera: 
                        select(name="jefe")
                            option(value="" disabled selected) En caso de serlo
                            option(value="Ingeniería en Sistemas Computacionales") Ingeniería en Sistemas Computacionales
                            option(value="Ingeniería en Gestión Empresarial") Ingeniería en Gestión Empresarial
                            option(value="Ingeniería Industrial") Ingeniería Industrial
                            option(value="Ingeniería en Tecnologías de la Información y Comunicaciones") Ingeniería en Tecnologías de la Información
                            option(value="Ingeniería Mecatronica") Ingeniería Mecatronica
                            option(value="Ingeniería en Logística") Ingeniería en Logística
                            option(value="Contador Público") Contador Público
                            option(value="Ingeniería en Administración") Ingeniería en Administración
                            option(value="Ingeniería Quimica") Ingeniería Quimica
                input.boton(type="submit", value="Registrar")
                        
